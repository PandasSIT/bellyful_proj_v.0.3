@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<br />
<br />
<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-5">
        <section>
            <form id="account" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">Email [UserName]</label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <button onclick="spinerLoading(this)" type="submit" class="btn btn-info">Log in</button>

                    <a  onclick="spinerLoading(this)" class="btn btn-danger" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>

                </div>

            </form>
        </section>
        <section>


            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                            for details on setting up this ASP.NET application to support logging in via external services.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">

                        @foreach (var provider in Model.ExternalLogins)
                        {
                            <button onclick="ggLoding()" type="submit" class="btn  btn-info" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                <div id="ggIcon" style="display: inline-block; margin-right: 5px;">
                                    <i class="fa fa-google"></i>
                                </div>
                                <span style="display: none; margin-bottom:3px;" id="spinner" class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                Log in via @provider.DisplayName
                            </button>


                        }


                    </form>
                }
            }
            <br /><br />
            <div class="form-group">

                <a id="forgot-password " class="text-black-50" asp-page="./ForgotPassword">Forgot your password?</a>


            </div>
        </section>
    </div>

    <div class="col-md-3">

    </div>

</div>

<br /><br /><br />


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function ggLoding() {
            document.getElementById("ggIcon").style.display = "none";
            document.getElementById("spinner").style.display = "inline-block";
        }
    </script>
}
