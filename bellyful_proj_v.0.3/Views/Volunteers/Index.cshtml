@using System.Globalization
@model IEnumerable<bellyful_proj_v._0._3.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteers";
}



@{
    TimeSpan timeSpan = TimeSpan.Zero;

    string GetTime(DateTime? dateTime)
    {
        return string.Format("{0}", dateTime.Value.ToString("dd/MM/yyyy", new CultureInfo("en-US")));
    }
}
    <p>
        <a asp-action="Create" class="btn btn-info">Create New</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th> VId </th>
            <th> Name </th>
            <th>@Html.DisplayNameFor(model => model.Dob) </th>
            <th>@Html.DisplayNameFor(model => model.Email) /th>
            <th>@Html.DisplayNameFor(model => model.PreferredPhone)</th>
            <th>@Html.DisplayNameFor(model => model.Address) </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td data-label=VId> @item.VolunteerId </td>
            <td data-label=Name>
                @Html.DisplayFor(modelItem => item.FirstName)  @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td data-label=@Html.DisplayNameFor(model => model.Dob)>
                @GetTime(item.Dob)
            </td>
            <td data-label=@Html.DisplayNameFor(model => model.Email)>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td data-label=@Html.DisplayNameFor(model => model.PreferredPhone)>
                @Html.DisplayFor(modelItem => item.PreferredPhone)
            </td>
            <td data-label=@Html.DisplayNameFor(model => model.Address)>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td data-label=Action>
                <a onclick="spinerLoading(this)" style="background-color:lightpink;" class="btn text-black-50" asp-action="Edit" asp-route-id="@item.VolunteerId">Edit</a>
                <a onclick="spinerLoading(this)" style="background-color:lightblue;" class="btn text-black-50" asp-action="Details" asp-route-id="@item.VolunteerId">Details</a>
            </td>
        </tr>
        }
    </tbody>
</table>

