
@model AppUserCreateViewModel

@{
    ViewBag.Title = "Add an AppUser";
}
<h2>Create a new App User</h2>
<br />
<br />
<form asp-action="CreateAppUser" method="post">
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Email" class="form-control" />
            <span class="text-danger" asp-validation-for="Email"> </span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2"></label>

        <div class="col-sm-6">
            <input asp-for="Password" class="form-control" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="VolunteerId" class="col-sm-2"></label>
        <div class="col-sm-6">
            <select asp-for="VolunteerId" class="form-control" asp-items="ViewBag.Volunteers">
                <option value="">--Leave Empty--</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="AppUserRoleId" class="col-sm-2"></label>
        <div class="col-sm-6">
            <select asp-for="AppUserRoleId" class="form-control" asp-items="ViewBag.AppUserRoles">
                <option value="">--Leave Empty--</option>
            </select>
        </div>
    </div>
    <div class="text-danger" asp-validation-summary="All"></div>
    <br />

    <pre style="color: gray">
 1. The Email also is the Username for this webApp login.
 2. Only Level 4 Deliver Man and Level 5 GeneralStaff has VolunteerId 
</pre>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>

    <a asp-action="Index" class="btn btn-secondary">Return to List</a>
</form>