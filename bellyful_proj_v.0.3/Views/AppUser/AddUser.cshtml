@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AddAppUserViewModel

@{
    ViewBag.Title = "Add an AppUser";
}

<form asp-action="AddUser" method="post">


    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="UserName"  class="form-control" />
            <span class="text-danger" asp-validation-for="UserName"> </span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2"></label>
        <div class="col-sm-6">
            <input asp-for="Email"  class="form-control"/>
            <span class="text-danger" asp-validation-for="Email"> </span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Password" class="col-sm-2"></label>
       
        <div class="col-sm-6">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

   
    <button type="submit" class="btn btn-primary">Add</button>
</form>