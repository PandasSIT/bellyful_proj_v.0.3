@using Microsoft.AspNetCore.Identity
@using bellyful_proj_v._0._3.Models
@model IEnumerable<AppUserIndexViewMode>

@{
    ViewData["Title"] = "AppUser";
}


<p>
    <a onclick="spinerLoading(this)" asp-action="CreateAppUser" class="btn btn-info">New</a>
</p>




@*<pre style="color: gray">Role Permissions:
     1. Admin and Manager : Access all the modules;
     2. Chef Manager : Access Only Batch,MealInstock, Order modules;
     3. Delivery Man : Can only see their own orders and MealInstock;
     4. General Staff: Can only see the MealInstock;
     5. Guest: Waiting to Assign a Role.

    Role & VId:
      An UserAccount can set Volunteer and Role or just leave empty  !
    </pre>*@

<table id="bellyful-appuser" class=" hover table nowrap ">
    <thead>
        <tr>
            <th scope="col">No.</th>
            @*<th scope="col">   @Html.DisplayNameFor(model => model.Email)</th> 直接用实体类，无需用Html helper  *@
            <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.Role)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.VIdName)</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td data-label="No.">
                    <script>document.write(counter); counter++;</script>.
                </td>
                <td data-label=@Html.DisplayNameFor(model => model.Email)><div> @user.Email</div> </td>

                @if (@user.Role != null)
                {
                    <td data-label=@Html.DisplayNameFor(model => model.Role)> <div>@user.Role</div></td>
                }
                else
                {
                    <td data-label=@Html.DisplayNameFor(model => model.Role)> - </td>
                }
                @if (@user.VIdName != null)
                {
                    <td data-label=@Html.DisplayNameFor(model => model.VIdName)> <div>@user.VIdName</div></td>
                }
                else
                {
                    <td data-label=@Html.DisplayNameFor(model => model.VIdName)> - </td>
                }
                <td data-label="Operation">
                    <form asp-action="EditUser" title="Edit AppUser" asp-route-id="@user.Id" class="d-inline" method="get">


                        <button type="submit" onclick="spinerLoading(this)" style="background-color:lightblue;" class="btn text-black-50">Edit</button>
                    </form>
                    <form asp-action="DeleteUser" title="Delete AppUser" asp-route-id="@user.Id" class="d-inline" method="post">
                        <button type="submit" style="background-color:lightpink;" class="btn text-black-50" onclick="return confirm('Are you Sure to delete this User?')"><i class="fa fa-times"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>




