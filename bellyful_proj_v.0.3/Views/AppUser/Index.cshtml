@using Microsoft.AspNetCore.Identity
@using bellyful_proj_v._0._3.Models
@model IEnumerable<AppUserIndexViewMode>


<a asp-action="CreateAppUser" class="btn btn-primary">Add New AppUser</a>
<br>
<br>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">No.</th>

            @*<th scope="col">   @Html.DisplayNameFor(model => model.Email)</th> 直接用实体类，无需用Html helper  *@
            <th scope="col">Email(Use to Login)</th>
            <th scope="col">App User Role</th>
            <th scope="col">VId & Name(If has)</th>
            <th scope="col">Operation</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td scope="row">
                    <script>document.write(counter); counter++;</script>
                </td>
                <td>@user.Email</td>
                <td>
                    @user.Role
                </td>@*role*@
                <td>@user.VIdName</td> @*VId*@
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="fa-user-times" onclick="return confirm('Are you Sure to delete this User?')"></button>
                    </form>

                    <form asp-action="EditUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-danger">Edit</button>
                    </form>
                </td>
            </tr>
            <div> </div>

        }
    </tbody>
</table>

